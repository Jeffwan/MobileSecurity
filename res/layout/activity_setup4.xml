<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setup1Activity" >

    <TextView
        style="@style/text_content_style"
        android:text="We strongly recommend your open AntiTheft module" />

    <TextView
        android:gravity="center_horizontal"
        android:textColor="#0066ff"
        android:onClick="activieAdmin"
        android:clickable="true"
        android:background="@drawable/status_selector"
        style="@style/text_content_style"
        android:text="Click Me to Active Admin" />

    <CheckBox
        android:id="@+id/cb_setup4_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AntiTheft Status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/btn_circle_normal" />

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/btn_circle_normal" />

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/btn_circle_normal" />

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/btn_circle_selected" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bind" />

        <Button style="@style/button_pre_style" />

        <Button
            style="@style/button_next_style"
            android:text="Finish" />
    </RelativeLayout>

</LinearLayout>